@model IEnumerable<ProyectoMvc.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de encargados</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Empleados">Agregar nuevo empleado</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.TipoIdentificacion)</td>
                        <td>@Html.DisplayNameFor(m => m.TipoIdentificacionId)</td>
                        <td>@Html.DisplayNameFor(m => m.Identificacion)</td>
                        <td>@Html.DisplayNameFor(m => m.IdentificacionId)</td>
                        <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                        <td>@Html.DisplayNameFor(m => m.Apellidos)</td>
                        <td>@Html.DisplayNameFor(m => m.Telefono)</td>
                        <td>@Html.DisplayNameFor(m => m.Correo)</td>
                        <td>@Html.DisplayNameFor(m => m.FechaNacimiento)</td>
                        <td>@Html.DisplayNameFor(m => m.Horaslaborales)</td>
                        <td>@Html.DisplayNameFor(m => m.NombreEmpleado)</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TipoIdentificacion</td>
                        <td>@item.TipoIdentificacionId</td>
                        <td>@item.Identificacion</td>
                        <td>@item.IdentificacionId</td>
                        <td>@item.Nombre</td>
                        <td>@item.Apellidos</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>@item.FechaNacimiento</td>
                        <td>@item.Horaslaborales</td>
                        <td>@item.NombreEmpleado</td>
                        <td>
                            <a asp-controller="Empleados" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Empleados" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existe registros</p>
        }
    </div>
</div>
